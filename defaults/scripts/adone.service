[Unit]
Description=ADONE next gen process manager for Node.js
After=network.target remote-fs.target

[Service]
Type=forking
User=%USER%

ExecStart=%ADONE_PATH% resurrect
ExecReload=%ADONE_PATH% reload all

ExecStop=%ADONE_PATH% dump
ExecStop=%ADONE_PATH% delete all
ExecStop=%ADONE_PATH% kill

[Install]
WantedBy=multi-user.target
