{
    "name": "adone",
    "description": "The generalized core of 'cyber-fractal systems' infrastructure.",
    "version": "0.6.62",
    "author": "Adone Core Team <info@adone.io>",
    "structure": {
        "src": {
            "bin": {
                "$task": "adoneTranspileExe",
                "$src": "src/cli/adone.js",
                "$dst": "bin"
            },
            "cli": {
                "$task": "adoneTranspile",
                "$src": [
                    "src/cli/**/*",
                    "!src/cli/adone.js"
                ],
                "$dst": "lib/cli"
            },
            "glosses": {
                "js": {
                    "$task": "adoneTranspile",
                    "$src": "src/glosses/**/*.js",
                    "$dst": "lib/glosses"
                },
                "dot": {
                    "$task": "adoneDotCompiler",
                    "$src": "src/glosses/schema/__/dot/*.jst",
                    "$dst": "lib/glosses/schema/__/dot"
                },
                "other": {
                    "$src": [
                        "src/glosses/**/*",
                        "!src/glosses/**/*.js",
                        "!src/glosses/schema/__/dot/*"
                    ],
                    "$dst": "lib/glosses"
                }
            },
            "vendor": {
                "$src": "src/vendor/**/*.js",
                "$dst": "lib/vendor"
            },
            "npm": {
                "$src": "src/npm/**/*.js",
                "$dst": "lib/npm"
            },
            "index": {
                "$task": "transpile",
                "$src": "src/index.js",
                "$dst": "lib"
            },
            "fast": {
                "$task": "transpile",
                "$src": "src/fast/**/*.js",
                "$dst": "lib/fast"
            },
            "realm": {
                "$task": "transpile",
                "$src": "src/realm/**/*.js",
                "$dst": "lib/realm"
            },
            "omnitron": {
                "js": {
                    "$task": "adoneTranspile",
                    "$src": "src/omnitron/**/*.js",
                    "$dst": "lib/omnitron"
                },
                "other": {
                    "$src": [
                        "src/omnitron/**/*",
                        "!src/omnitron/**/*.js"
                    ],
                    "$dst": "lib/omnitron"
                }
            },
            "project": {
                "$task": "transpile",
                "$src": "src/project/**/*.js",
                "$dst": "lib/project"
            },
            "shani": {
                "$task": "transpile",
                "$src": "src/shani/**/*.js",
                "$dst": "lib/shani"
            },
            "specter": {
                "$task": "transpile",
                "$src": "src/specter/**/*.js",
                "$dst": "lib/specter"
            }
        }
    }
}